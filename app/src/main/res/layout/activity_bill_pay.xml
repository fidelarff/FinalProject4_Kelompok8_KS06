<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <TextView
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_arrow_left"
        android:gravity="center"
        android:padding="10dp"
        android:text="Total Bill Info"
        android:textColor="@color/bright_green"
        android:textSize="20sp" />
    <View
        android:layout_below="@id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkest_green"/>

    <LinearLayout
        android:layout_below="@id/backBtn"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout

            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule Date"
                android:textSize="18sp" />
            <TextView
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/schedule_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule Date"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout

            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting point"
                android:textSize="18sp" />

            <TextView
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/startfrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdas"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout

            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination:"
                android:textSize="18sp" />

            <TextView
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dfdd"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout

            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="No of Seats"
                android:textSize="18sp" />
            <TextView
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/bookedSeats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="total "
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout

            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total amount"
                android:textSize="18sp" />

            <TextView
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/priceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/green"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/darkest_green"
            android:text="Select Payment Method"/>

        <CheckBox
            android:id="@+id/cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckBoxClicked"
            android:text="Cash On Arrival"/>

        <CheckBox
            android:id="@+id/instant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckBoxClicked"
            android:text="Instant Pay"/>


    </LinearLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirm Booking" />

    <Button
        android:visibility="gone"
        android:id="@+id/confirm_instant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirm Booking" />

</RelativeLayout>