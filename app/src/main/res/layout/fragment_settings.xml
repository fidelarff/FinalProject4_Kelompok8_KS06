<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customerSection.fragments.SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_grey"
            android:padding="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setprofile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_users"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

                <TextView
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawablePadding="6dp"
                    android:padding="5dp"
                    android:id="@+id/setname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="8dp"
                    android:padding="5dp"
                    android:id="@+id/setemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="6dp"
                    android:padding="5dp"
                    android:id="@+id/setcontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_below="@id/top"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true">
            <androidx.cardview.widget.CardView
                android:id="@+id/aboutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                android:padding="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:padding="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" About Us"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:drawableStart="@drawable/ic_bus"
                            />
                        <TextView
                            android:id="@+id/downArrow"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            android:layout_width="20dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_arrow_down"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/upArrow"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            android:layout_width="20dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_arrow_up"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/aboutUsDesTV"
                        android:padding="15dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="K8 Bus is a bus ticket booking system which is made for Final Project 4 Hacktiv8."
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Profile settings"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:drawableStart="@drawable/ic_edit"
                        />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_forward"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/passwordCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Change Password"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:drawableStart="@drawable/ic_lock"
                        />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_forward"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/viewReservations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="15dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Reservation History"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:drawableStart="@drawable/ic_history"
                        />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_forward"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:layout_margin="20dp"
                android:id="@+id/logoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/light_grey"
                android:textColor="@color/bright_green"
                android:text="Log Out"
                android:drawableLeft="@drawable/ic_logout" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>